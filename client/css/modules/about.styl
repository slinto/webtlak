.about {
  padding-top: 150px;
  transition: padding 100ms linear;

  a {
    display: inline-block;
    color: #000;
    padding: 0 5px;

    &:hover {
      color: $colorBlue;
      background: $colorPink;
      text-decoration: none;
    }
  }

  @media (max-width: 700px) {
    padding-top: 100px;
    padding-bottom: 100px;
  }

  @media (max-width: 420px) {
    padding-top: 75px;
    padding-bottom: 75px;
  }
}

.about__text {
  width: $width;
  margin: 0 auto;
  font-size: 60px;
  line-height: 80px;
  transition: font-size 100ms linear, line-height 100ms linear;

  @media (max-width: 1600px) {
    font-size: 50px;
    line-height: 70px;
  }

  @media (max-width: 1300px) {
    font-size: 36px;
    line-height: 56px;
  }

  @media (max-width: 1000px) {
    font-size: 30px;
    line-height: 50px;
  }

  @media (max-width: 700px) {
    font-size: 24px;
    line-height: 38px;
  }

  @media (max-width: 600px) {
    font-size: 20px;
    line-height: 34px;
  }

  @media (max-width: 480px) {
    font-size: 18px;
    line-height: 30px;
  }

  @media (max-width: 300px) {
    font-size: 17px;
    line-height: 25px;
  }
}

.about .about__newsletter {
  color: $colorPink;
  background: $colorBlue;
}
