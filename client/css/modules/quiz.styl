@keyframes bodyShowPink {
  from {
    background-color: #fff;
  }
  to {
    background-color: $colorPink;
  }
}

@keyframes bodyShowBlue {
  from {
    background-color: #fff;
  }
  to {
    background-color: $colorBlue;
  }
}

@keyframes quizShow {
  from {
    opacity: 0;
    transform: scale(1.5, 1.5);
  }
  to {
    opacity: 1;
    transform: scale(1, 1);
  }
}

body.quiz-body {
  padding: 0 150px;

  @media (max-width: 1000px) {
    padding-left: 100px;
    padding-right: 100px;
  }

  @media (max-width: 700px) {
    padding-left: 75px;
    padding-right: 75px;
  }

  @media (max-width: 500px) {
    padding-left: 25px;
    padding-right: 25px;
  }
}

body.blue
  background $colorBlue
  color #fff

  p
    color #fff

  .quiz__button {
    background: #050505;
    color: #fff;

    &:hover {
      background: #fff;
      color: #050505;
    }
  }

body.pink {
  background $colorPink
  color #050505

  p {
    color #050505
  }

  .quiz__button {
    background: #fff;
    color: #050505;

    &:hover {
      background: #050505;
      color: #fff;
    }
  }
}

.quiz {
  text-align: center;

  &.show {
    opacity: 1;
  }

  p {
    margin: 0;
  }
}

.quiz__header {
  position: relative;
}

.quiz__header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  opacity: 0.1;
  color: #050505;
  font-size: 200px;
  font-weight: 700;
  line-height: 100px;

  @media (max-width: 500px) {
    font-size: 130px;
    line-height: 60px;
  }
}

.quiz__header-id {
  font-size: 48px;
  line-height: 72px;
  font-weight: 700;

  @media (max-width: 500px) {
    font-size: 38px;
    line-height: 50px;
  }
}

.quiz__header-question {
  font-size: 30px;
  font-weight: 400;

  @media (max-width: 500px) {
    font-size: 20px;
  }
}

p.quiz__answer {
  display: block;
  font-size: 60px;
  font-weight: 700;
  margin-top: 50px;
  margin-bottom: 100px;

  @media (max-width: 1000px) {
    font-size: 50px;
    margin-bottom: 75px;
  }

  @media (max-width: 700px) {
    font-size: 40px;
    margin-bottom: 60px;
  }

  @media (max-width: 500px) {
    font-size: 28px;
    margin-bottom: 40px;
  }
}

.quiz__button {
  display: inline-block;
  text-align: center;
  text-transform: uppercase;
  font-size: 16px;
  font-weight: 700;
  padding: 45px 150px;
  box-sizing: border-box;

  @media (max-width: 1000px) {
    padding: 30px 100px;
  }

  @media (max-width: 330px) {
    width: 100%;
    padding: 30px 20px;
  }
}
