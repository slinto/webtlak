.container
  width 1170px
  margin 0 auto
  box-sizing border-box

  &.fluid
    width 90%

  @media(max-width: 1266px)
    width 100%
    padding 0 48px

  &.margin-top
    margin-top 160px

    @media (max-width: 1300px)
      margin-top 120px

.row
  position relative
  overflow hidden

  &.no-overflow
    overflow visible

  &.margin-top
    margin-top 12px

  &.center
    text-align center

  &.border-bottom
    border-bottom 1px solid $border
    padding 15px 0

  &.padding
    padding 15px 0

  &.padding-20
    padding 20px
    box-sizing border-box

  &.padding-big
    padding 40px 20px
    box-sizing border-box

.part-2
  box-sizing border-box
  float left
  width 50%
  padding 20px
